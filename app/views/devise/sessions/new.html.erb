
<div class = 'align-body'>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field input-field">
    <%= f.email_field :email, placeholder: "User Email", autofocus: true, autocomplete: "email", class: "input-width" %>
  </div>

  <div class="field input-field">
    <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password", class: "input-width" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field margin">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

    <div class="actions margin">
    <%= f.submit "Log in", class: 'sign-in-button'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
