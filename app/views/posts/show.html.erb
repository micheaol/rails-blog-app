<div class = 'show-posts'>
  <div class = 'posts-header'>
   <div>
      <h2>Post <%= @post.id %> by <%= @user.name%></h2>
    </div>
    <div>
      <%= render partial: "shared/total_comments", locals: { total_comments: @post.comments.size } %>, 
      <%= render partial: "shared/total_likes", locals: { total_likes: @post.likes.size } %>
    </div>
  </div>
  <%= render partial: "/shared/like_form", locals: { post: @post } %>
   <%= button_to 'Delete', method: "delete", class: "btn"%>
  <p><%= @post.text %></p>
</div>

<div class = 'comments'>
  <% if @post.comments.size > 0 %>
    <%= render partial: "/shared/new_comment", locals: { comments: @post.comments } %>
  <% end %>
</div>
<br>
 <div>
    <%= flash[:notice]%>
    <%= flash[:alert]%>
 </div>
<div class = "new-post">
  <h3> Add a comment </h3>
  <%= render partial: "shared/comment_form", locals: { post: @post } %>
</div>
